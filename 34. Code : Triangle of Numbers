'''
Code : Triangle of Numbers
'''


import java.util.*;
public class Solution {


	public static void main(String[] args) {
		Scanner inp=new Scanner(System.in);
        int n=inp.nextInt();
        int i=1;
        while(i<=n){
            int spaces=1;
            while(spaces<=n-i){
                System.out.print(" ");
                spaces+=1;
            }
            int inc=1;
            while(inc<=i){
                System.out.print(i+inc-1);
                inc+=1;
            }
            int dec=i-1;
            while(dec>=1){
                System.out.print(i+dec-1);
                dec-=1;
            }
            i+=1;
            System.out.println();
        }
	}
}
