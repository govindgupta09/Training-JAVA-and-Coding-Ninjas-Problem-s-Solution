'''
Code : Mirror Image Number Pattern
'''

import java.util.*;
public class Solution {


	public static void main(String[] args) {
		Scanner inp=new Scanner(System.in);
        int n=inp.nextInt();
        int i=1;
        while(i<=n){
            int spaces=1;
            while(spaces<=n-i){
                System.out.print(" ");
    			spaces+=1;
            }
            int j=1;
            while(j<=i){
                System.out.print(j);
                j+=1;
            }
            System.out.println();
            i+=1;
        }
	}
}
