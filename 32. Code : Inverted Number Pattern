'''
Code : Inverted Number Pattern
''''

import java.util.*;
public class Solution {
    public static void main(String[] args) {
		Scanner inp=new Scanner(System.in);
        int n=inp.nextInt();
        int i=1;
        while(i<=n){
            int j=1;
            while(j<=n-i+1){
                System.out.print(n-i+1);
                j+=1;
            }
            int spaces=1;
            while(spaces<=i-1){
                System.out.print("");
    			spaces+=1;
            }
            i+=1;
            System.out.println();
        }
	}
}
